<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Your Cart</h1>

        {{#if cartItems.length}}
            <table>
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cartItems}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>${{this.price}}</td>
                        <td>{{this.quantity}}</td>
                        <td>${{multiply this.price this.quantity}}</td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3">Grand Total</th>
                        <th>${{calculateTotal cartItems}}</th>
                    </tr>
                </tfoot>
            </table>
        {{else}}
            <p>Your cart is empty.</p>
        {{/if}}

        <a href="/" class="btn btn-primary">Continue Shopping</a>
    </div>
</body>
</html>
